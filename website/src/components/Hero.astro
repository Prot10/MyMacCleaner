---
// Fetch releases data at build time
import releases from '../../public/data/releases.json';

const latestRelease = releases.releases.find(r => r.latest) || releases.releases[0];
---

<section class="pt-32 pb-20">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto">
      <!-- Badge -->
      <div class="inline-flex items-center gap-3 px-4 py-2 rounded-full bg-white/5 border border-white/10 text-sm text-gray-300 mb-8 animate-fade-in">
        <span class="inline-flex items-center gap-1.5">
          <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
          Free & Open Source
        </span>
        <span class="w-px h-4 bg-white/20"></span>
        <span class="text-primary font-medium">v{latestRelease.version}</span>
      </div>

      <!-- Heading -->
      <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold mb-6 animate-slide-up">
        <span class="gradient-text">Clean Your Mac</span>
        <br />
        <span class="text-white">The Smart Way</span>
      </h1>

      <!-- Description -->
      <p class="text-xl text-gray-400 mb-10 max-w-2xl mx-auto animate-slide-up" style="animation-delay: 0.1s;">
        A modern, beautiful macOS utility with Liquid Glass UI. Clean junk files, manage applications, monitor performance, and keep your Mac running smoothly.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-slide-up" style="animation-delay: 0.2s;">
        <a
          href={latestRelease.downloads.dmg.url}
          class="glass-button flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          Download for macOS
          <span class="text-sm text-white/60">({latestRelease.downloads.dmg.size})</span>
        </a>
        <a
          href="/MyMacCleaner/docs/"
          class="glass-button-secondary flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          Read Docs
        </a>
      </div>

      <!-- GitHub Star Button -->
      <div class="mt-6 flex items-center justify-center gap-3 animate-slide-up" style="animation-delay: 0.25s;">
        <a
          href="https://github.com/Prot10/MyMacCleaner"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-white/10 hover:bg-white/15 border border-white/20 text-white text-sm font-medium transition-all duration-200 hover:-translate-y-0.5"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
          <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
          </svg>
          Star on GitHub
        </a>
        <img
          src="https://img.shields.io/github/stars/Prot10/MyMacCleaner?style=social"
          alt="GitHub stars"
          class="h-5"
        />
      </div>

      <!-- Stats -->
      <div class="mt-16 grid grid-cols-3 gap-8 max-w-lg mx-auto animate-fade-in" style="animation-delay: 0.3s;">
        <div>
          <div class="text-3xl font-bold text-white">8+</div>
          <div class="text-sm text-gray-500">Features</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-white">14.0+</div>
          <div class="text-sm text-gray-500">macOS</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-white">AGPL</div>
          <div class="text-sm text-gray-500">License</div>
        </div>
      </div>
    </div>

    <!-- App Screenshot -->
    <div class="mt-20 animate-slide-up" style="animation-delay: 0.4s;">
      <div class="max-w-4xl mx-auto">
        <img
          src="/MyMacCleaner/screenshots/home/home_base.png"
          alt="MyMacCleaner Home Screen with Smart Scan ready to analyze your system"
          class="rounded-xl w-full"
          loading="eager"
        />
      </div>
    </div>
  </div>
</section>
