---

<section id="features" class="py-24">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
        Everything You Need
      </h2>
      <p class="text-lg text-gray-400 max-w-2xl mx-auto">
        A complete toolkit to keep your Mac clean, fast, and organized. All in one beautiful app.
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      {features.map((feature, index) => (
        <a href={feature.href} class="block group">
          <GlassCard class="h-full overflow-hidden">
            {feature.screenshot && (
              <div class="mb-4 -mx-4 -mt-4 overflow-hidden rounded-t-xl">
                <img
                  src={feature.screenshot}
                  alt={`${feature.title} screenshot`}
                  class="w-full h-40 object-cover object-top group-hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                />
              </div>
            )}
            <div class="flex items-start gap-3">
              <div class={`w-10 h-10 rounded-lg bg-gradient-to-br ${feature.color} flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform`}>
                <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5" set:html={feature.icon} />
              </div>
              <div>
                <h3 class="text-lg font-semibold text-white mb-1 group-hover:text-primary transition-colors">
                  {feature.title}
                </h3>
                <p class="text-sm text-gray-400 leading-relaxed">
                  {feature.description}
                </p>
              </div>
            </div>
          </GlassCard>
        </a>
      ))}
    </div>
  </div>
</section>
