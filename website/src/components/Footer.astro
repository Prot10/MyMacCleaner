---
const currentYear = new Date().getFullYear();

const links = {
  product: [
    { label: 'Features', href: '/MyMacCleaner/#features' },
    { label: 'Download', href: 'https://github.com/Prot10/MyMacCleaner/releases/latest', external: true },
    { label: 'Documentation', href: '/MyMacCleaner/docs/' },
  ],
  resources: [
    { label: 'GitHub', href: 'https://github.com/Prot10/MyMacCleaner', external: true },
    { label: 'Issues', href: 'https://github.com/Prot10/MyMacCleaner/issues', external: true },
    { label: 'Releases', href: 'https://github.com/Prot10/MyMacCleaner/releases', external: true },
  ],
  support: [
    { label: 'Buy Me a Coffee', href: 'https://buymeacoffee.com/prot10', external: true },
    { label: 'Star on GitHub', href: 'https://github.com/Prot10/MyMacCleaner', external: true },
  ],
};
---

<footer class="border-t border-white/10 bg-black/30">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href="/MyMacCleaner/" class="flex items-center gap-3 mb-4">
          <img
            src="/MyMacCleaner/icon-192.png"
            alt="MyMacCleaner"
            class="w-10 h-10 rounded-xl"
          />
          <span class="font-semibold text-white text-lg">MyMacCleaner</span>
        </a>
        <p class="text-sm text-gray-400 leading-relaxed">
          Free, open-source macOS cleaning utility with beautiful Liquid Glass UI.
        </p>
      </div>

      <!-- Product Links -->
      <div>
        <h3 class="text-sm font-semibold text-white mb-4">Product</h3>
        <ul class="space-y-3">
          {links.product.map((link) => (
            <li>
              <a
                href={link.href}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
                class="text-sm text-gray-400 hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources Links -->
      <div>
        <h3 class="text-sm font-semibold text-white mb-4">Resources</h3>
        <ul class="space-y-3">
          {links.resources.map((link) => (
            <li>
              <a
                href={link.href}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
                class="text-sm text-gray-400 hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Support Links -->
      <div>
        <h3 class="text-sm font-semibold text-white mb-4">Support</h3>
        <ul class="space-y-3">
          {links.support.map((link) => (
            <li>
              <a
                href={link.href}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
                class="text-sm text-gray-400 hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-white/10 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-sm text-gray-500">
        &copy; {currentYear} MyMacCleaner. Released under AGPL-3.0 License.
      </p>
      <div class="flex items-center gap-4">
        <a
          href="https://github.com/Prot10/MyMacCleaner"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-400 hover:text-white transition-colors"
          aria-label="GitHub"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
